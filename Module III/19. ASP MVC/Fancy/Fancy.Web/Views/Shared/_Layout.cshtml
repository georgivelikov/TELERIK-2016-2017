<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fancy.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <nav class="navbar navbar-default">
            @Html.ActionLink("FANCY.COM", "Index", "Home", new { @class = "navbar-item", id = "navbar-brand-id" })
            @Html.ActionLink("Home", "Index", "Home", new { @class = "navbar-item", id = "navbar-home-id" })
            @Html.ActionLink("Newest", "Index", "Home", new { @class = "navbar-item", id = "navbar-newest-id" })
            @Html.ActionLink("Promotions", "Index", "Home", new { @class = "navbar-item", id = "navbar-promotions-id" })
            @Html.Partial("_LoginPartial")
        </nav>
    </header>
    <div id="container">
        <div class="row">
            <aside class="left">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active">@Html.ActionLink("Our Jewellry", "Index", "Home")</li>
                    <li>@Html.ActionLink("Necklaces", "Index", "Home")</li>
                    <li>@Html.ActionLink("Earings", "Index", "Home")</li>
                    <li>@Html.ActionLink("Bracelets", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sets", "Index", "Home")</li>
                    <li>@Html.ActionLink("All", "Index", "Home")</li>
                </ul>
            </aside>
            <main class="left">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Georgi Velikov</p>
                </footer>
            </main>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
