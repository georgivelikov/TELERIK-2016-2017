<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.telerikacademy.meetup.view.review.ReviewActivity"
        android:id="@+id/activity_review"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <fragment
            android:id="@+id/fragment_review_toolbar"
            android:name="com.telerikacademy.meetup.ui.fragment.ToolbarFragment"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"/>

    <fragment
            android:id="@+id/fragment_review_content"
            android:name="com.telerikacademy.meetup.view.review.ReviewContentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>
